<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_calendar_day"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="4dp">

        <!-- Date number with background indicator -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="4dp">

            <!-- Current day marker -->
            <View
                android:id="@+id/view_day_marker"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/bg_day_marker_blue"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Date text -->
            <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                tools:text="19" />

        </FrameLayout>

        <!-- Total/balance (PERTAMA - HITAM) -->
        <TextView
            android:id="@+id/tv_day_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_primary"
            android:textSize="7sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="-170K" />

        <!-- Income (KEDUA - HIJAU) - Direct colored text -->
        <TextView
            android:id="@+id/tv_day_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/success"
            android:textSize="7sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="+10K" />

        <!-- Expense (KETIGA - MERAH) - Direct colored text -->
        <TextView
            android:id="@+id/tv_day_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/danger"
            android:textSize="7sp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="-220K" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
